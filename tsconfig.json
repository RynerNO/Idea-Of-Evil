{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@bot/*": ["./src/bot/*"],
      "@api/*": ["./src/api/*"],
      "@src/*": ["./src/*"]
    },
    "lib": [
      "es2017"
    ]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
